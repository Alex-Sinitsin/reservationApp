# Маршруты
GET     /                                   controllers.IndexController.index()
GET     /signOut                            controllers.SignInController.signOut()


# Страницы POST запросов

# Пользователи
# TODO: Настроить у форм CSRF токены
+noCSRF
POST        /signUp                          controllers.SignUpController.submit
POST        /signIn                          controllers.SignInController.submit
POST        /password/change                 controllers.ChangePasswordController.submit

# События
POST        /events/add                       controllers.EventController.addEvent()
POST        /events/:eventId/update           controllers.EventController.updateEvent(eventId: Long)
POST        /events/:eventId/delete           controllers.EventController.deleteEvent(eventId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
