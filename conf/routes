# Маршруты
GET     /                                   controllers.IndexController.index()

# TODO: Настроить у форм CSRF токены
+noCSRF
# Регистрация и авторизация
POST        /signUp                          controllers.SignUpController.submit
POST        /signIn                          controllers.SignInController.submit

# Страницы POST запросов
POST        /events/add                       controllers.EventController.addEvent()
POST        /events/update/:id                controllers.EventController.updateEvent(id)
POST        /events/delete/:id                controllers.EventController.deleteEvent(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
