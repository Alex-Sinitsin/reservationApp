# Маршруты


GET         /                                    controllers.FrontendController.index()
GET         /signOut                             controllers.SignInController.signOut()


# Регистрация и авторизация
POST        /api/signUp                          controllers.SignUpController.submit
POST        /api/signIn                          controllers.SignInController.submit
POST        /password/change                 controllers.ChangePasswordController.submit
POST        /user/:userId/delete             controllers.UserController.delete(userId: java.util.UUID)

# События
POST        /events/add                       controllers.EventController.addEvent()
POST        /events/:eventId/update           controllers.EventController.updateEvent(eventId: Long)
POST        /events/:eventId/delete           controllers.EventController.deleteEvent(eventId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                            controllers.Assets.versioned(path="/public", file: Asset)

# Serve static assets under public directory
GET     /*file                                   controllers.FrontendController.assetOrDefault(file)
