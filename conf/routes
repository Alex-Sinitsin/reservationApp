# Маршруты
GET     /                                   controllers.FrontendController.index()

# Пользователи
GET         /api/users                           controllers.UserController.listAll()
GET         /api/signOut                         controllers.SignInController.signOut()
POST        /api/signUp                          controllers.SignUpController.submit
POST        /api/signIn                          controllers.SignInController.submit
POST        /api/password/change                 controllers.ChangePasswordController.submit
POST        /api/user/:userId/delete             controllers.UserController.delete(userId: java.util.UUID)
POST        /api/users/:userId/role              controllers.UserController.changeUserRole(userId: java.util.UUID)


# События
GET         /api/events                          controllers.EventController.listAll()
POST        /api/events/create                   controllers.EventController.createEvent()
POST        /api/events/:eventId/update          controllers.EventController.updateEvent(eventId: Long)
POST        /api/events/:eventId/delete          controllers.EventController.deleteEvent(eventId: Long)

# Объекты
GET         /api/items                            controllers.ItemController.listAll()
POST        /api/items/create                     controllers.ItemController.saveItem(itemId: Long = -1)
POST        /api/items/:itemId/update             controllers.ItemController.saveItem(itemId: Long)
POST        /api/items/:itemId/delete             controllers.ItemController.deleteItem(itemId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                            controllers.Assets.versioned(path="/public", file: Asset)

# Serve static assets under public directory
GET     /*file                                   controllers.FrontendController.assetOrDefault(file)
