# Маршруты
GET     /                                   controllers.IndexController.index()

# Пользователи
GET         /users                           controllers.UserController.listAll()
GET         /signOut                         controllers.SignInController.signOut()
POST        /signUp                          controllers.SignUpController.submit
POST        /signIn                          controllers.SignInController.submit
POST        /password/change                 controllers.ChangePasswordController.submit
POST        /users/:userId/role              controllers.UserController.changeUserRole(userId: java.util.UUID)
POST        /users/:userId/delete            controllers.UserController.delete(userId: java.util.UUID)

# События
GET         /events                           controllers.EventController.listAll()
POST        /events/create                    controllers.EventController.createEvent()
POST        /events/:eventId/update           controllers.EventController.updateEvent(eventId: Long)
POST        /events/:eventId/delete           controllers.EventController.deleteEvent(eventId: Long)

# Объекты
GET        /items                             controllers.ItemController.listAll()
POST       /items/create                      controllers.ItemController.saveItem(itemId: Long = -1)
POST       /items/:itemId/update              controllers.ItemController.saveItem(itemId: Long)
POST       /items/:itemId/delete              controllers.ItemController.deleteItem(itemId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
